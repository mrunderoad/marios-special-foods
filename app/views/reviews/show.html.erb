<h1><%= @review.name %></h1>
<h3>Author: <%= @review.author %></h3>

<% if @review.products.any? %>
  <h4>This review is for this product!</h4>

  <% @review.projects.each do |product| %>
    <ul>
      <li>
        <%= link_to product.name, product_path(product) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>This review is left for no product</p>
<% end %>

<p><%= link_to "Edit", edit_product_review_path(@review) %></p>
<p><%= link_to "Delete Review", product_review_path(@review),
                        :data => {:confirm => "Are you sure you want to delete this review>",
                                    :method => "delete"} %></p>
                                    <p><%= link_to "Return to reviews", review_path(@reviews) %></p>