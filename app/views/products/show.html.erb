<h1>Product: <%= @product.name %></h1>
<h3>Product Origin: <%= @product.origin %></h3>
<h3>Product Cost: <%= @product.cost %></h3>

<% if @product.reviews.any? %>
  <h4>Reviews for <%= @product.name %></h4>

  <% @product.reviews.each do |review| %>
    <ul>
      <li>
        <%= link_to review.name, product_review_path(@product, review) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>There are currently no reviews for this product.</p>
<% end %>

<p><%= link_to "Add a review", new_product_review_path(@product) %></p>

<p><%= link_to "Edit", edit_product_path(@product) %></p>
<p><%= link_to "Delete product", product_path(@product),
                        :data => {:confirm => "Are you sure you want to delete this product?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to product list", products_path %></p>
